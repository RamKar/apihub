<!doctype html>
<head>
  <title>Rapids API Hub</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="home.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script>function transportname(){

  var x = document.getElementsByName("email")[0].value;
  sessionStorage.setItem("email", x);
  }
  </script>
  <style>
  
  .affix {
      top: 20px;
  }
  </style>
</head>
<body>
<div class="container-fluid" style="background-color:#21A6F3;color:#fff;height:100px;">
  <h1>Rapids SwaggerHub UI</h1>
</div>
<br>
  <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <form action="/forgot" method="post">
        <div class="page-header text-center">
        <div class="col-md-10" class="comtainer-fluid">
        <p>Enter your registered email address</p>
        <div class="form-group">
         <input id="email" type="email" class="form-control" name="email"  required>
        </div>
          <br>
        <p>Enter your First name</p>
        <div class="form-group">
         <input type="text" class="form-control"  name="firstName" required>
         </div>
          <br>
        <p>Enter your Date of birth</p>
        <div class="form-group">
         <input type="text" class="form-control" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01])/(0[1-9]|1[012])/[0-9]{4}" placeholder="Enter in this format DD/MM/YYYY" name="dob" required>
         </div>
          <br>
           
          <button type="submit" class="btn btn-block btn-primary btn-lg" onclick="transportname()">Get password</button>
       </form>
       <p>Go to <a href="/">home</a></p>
      </div>
    
    
</div>
</body>
</html>
